pipeline {
    agent any
    options {
        timeout(time: 1, unit: 'HOURS')
        disableConcurrentBuilds()
    }
    triggers {
        cron 'H * * * *'
    }

    stages {
        stage('checkout') {
            steps {
                echo 'checkout HL github'
                checkout([
                    $class: 'GitSCM', 
                    branches: [[name: '*/master']], 
                    doGenerateSubmoduleConfigurations: false, 
                    extensions: [], 
                    submoduleCfg: [], 
                    userRemoteConfigs: [[url: 'https://github.com/HaxeFoundation/hashlink.git']]
                ])                
            }
        }

        stage('compile') {
            steps {
                echo 'compile HL github'
                sh '''
                cd hashlink
                PREFIX=/opt/hashlink/hashlink.github make
                '''
            }
        }

        stage('install') {
            steps {
                echo 'install HL github'
                sh '''
                cd hashlink
                PREFIX=/opt/hashlink/hashlink.github make install
                '''
            }
        }
    }
}
